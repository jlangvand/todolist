<StackPane fx:id="stackPane" stylesheets="@../css/menus.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ViewTaskController">
   <children>
      <BorderPane fx:id="mainPane" stylesheets="@../css/menus.css">
         <left>
            <Pane prefWidth="20.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Pane prefWidth="20.0" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER_LEFT" spacing="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label fx:id="taskTitle" styleClass="labelTitle" text="Task name" />
                        <Label fx:id="taskDescription" styleClass="description" text="Task description" />
                       <HBox alignment="CENTER_LEFT" spacing="15.0">
                         <children>
                           <ImageView>
                             <image>
                               <Image url="@../images/Clock_icon.png" />
                             </image>
                           </ImageView>
                              <VBox spacing="15.0">
                                 <children>
                                    <Label fx:id="deadlineDateTime" styleClass="mainLabel" text="Deadline: ..." />
                                 <Label fx:id="deadlineTimeLeft" styleClass="mainLabel" text="... left" />
                                 </children>
                              </VBox>
                         </children>
                       </HBox>
                       <HBox alignment="CENTER_LEFT" spacing="15.0">
                         <children>
                           <ImageView>
                             <image>
                               <Image url="@../images/Minus_sign_icon.png" />
                             </image>
                           </ImageView>
                           <Label fx:id="taskPriority" styleClass="mainLabel" text=" x Priority" />
                         </children>
                       </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <ImageView fitHeight="36.0" fitWidth="36.0">
                                 <image>
                                    <Image url="@../images/Info_icon.png" />
                                 </image>
                              </ImageView>
                              <Label styleClass="mainLabel" text="Category: " />
                              <Label fx:id="taskCategory" styleClass="mainLabel" text="..." />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <ImageView fitHeight="36.0" fitWidth="36.0">
                                 <image>
                                    <Image url="@../images/More_time_icon.png" />
                                 </image>
                              </ImageView>
                              <Label fx:id="taskPriority11" styleClass="mainLabel" text="Date Added: " />
                              <Label fx:id="taskStartedDate" styleClass="mainLabel" text="..." />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </center>
         <top>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="titleText" alignment="CENTER" text="Task Details" textFill="#fcfcfc" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                     <font>
                        <Font size="39.0" />
                     </font>
                  </Label>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
               </children>
            </AnchorPane>
         </top>
         <bottom>
            <AnchorPane BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                     <children>
                       <JFXButton fx:id="backButton" buttonType="RAISED" styleClass="secondaryButton" text="Back" />
                       <JFXButton fx:id="deleteButton" onAction="#deleteAction" style="-jfx-button-type: RAISED;" styleClass="dangerButton" text="Delete" />
                       <JFXButton fx:id="editButton" style="-jfx-button-type: RAISED;" styleClass="primaryButton" text="Edit" />
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
