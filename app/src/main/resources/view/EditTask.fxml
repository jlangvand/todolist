<StackPane fx:id="stackPane" stylesheets="@../css/menus.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EditTaskController">
   <children>
      <BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/menus.css">
         <center>
            <VBox alignment="CENTER" fillWidth="false" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="520.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label styleClass="mainLabel" text="Name" />
                        <Region prefHeight="77.0" prefWidth="55.0" />
                        <JFXTextField fx:id="nameField" promptText="Task name" />
                        <Region prefHeight="77.0" prefWidth="143.0" />
                        <JFXButton contentDisplay="CENTER" onAction="#displayTrashDialog" styleClass="imageButton" text=" ">
                           <graphic>
                              <ImageView>
                                 <image>
                                    <Image url="@../images/Trash_icon.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                     </children>
                  </HBox>
                  <HBox prefHeight="80.0" prefWidth="570.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label styleClass="mainLabel" text="Description" />
                        <Region prefHeight="77.0" prefWidth="16.0" />
                        <JFXTextArea fx:id="descriptionField" prefHeight="80.0" prefWidth="348.0" promptText="Task descrpition" />
                     </children>
                  </HBox>
                  <Region prefHeight="19.0" prefWidth="490.0" />
                  <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="520.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label prefHeight="26.0" prefWidth="87.0" styleClass="mainLabel" text="Deadline" />
                        <Region prefHeight="77.0" prefWidth="22.0" />
                        <JFXDatePicker fx:id="deadlineDateField" prefHeight="28.0" prefWidth="151.0" promptText="Date" />
                        <Region prefHeight="77.0" prefWidth="67.0" />
                        <JFXTimePicker fx:id="deadlineTimeField" prefHeight="28.0" prefWidth="166.0" promptText="Time" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="520.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label styleClass="mainLabel" text="Category" />
                        <Region prefHeight="78.0" prefWidth="26.0" />
                        <JFXTextField fx:id="categoryField" prefHeight="37.0" prefWidth="118.0" />
                        <Region prefHeight="78.0" prefWidth="61.0" />
                        <Label prefHeight="26.0" prefWidth="68.0" styleClass="mainLabel" text="Priority" />
                        <Region prefHeight="80.0" prefWidth="22.0" />
                        <JFXComboBox fx:id="priorityField" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="77.0" prefWidth="475.0" VBox.vgrow="ALWAYS">
                     <children>
                        <JFXButton fx:id="saveEdit" onAction="#saveAction" prefHeight="53.0" prefWidth="123.0" styleClass="regularButton" text="Save" />
                        <Region prefHeight="77.0" prefWidth="42.0" />
                        <JFXButton fx:id="cancelEdit" onAction="#cancelAction" prefHeight="53.0" prefWidth="123.0" styleClass="regularButton" text="Cancel" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <left>
            <Pane prefHeight="400.0" prefWidth="30.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Pane prefHeight="400.0" prefWidth="30.0" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
</StackPane>
