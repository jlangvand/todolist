<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="pane" minWidth="500.0" styleClass="background" stylesheets="@../css/navbar.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
   <left>
      <VBox styleClass="navbar" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="allTasksButton" alignment="BASELINE_LEFT" onMouseClicked="#displayAllTasks" prefHeight="90.0" prefWidth="240.0" ripplerFill="WHITE" text="All Tasks">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Star_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="highPriorityButton" alignment="BASELINE_LEFT" onMouseClicked="#displayHighPriorityTasks" prefHeight="90.0" prefWidth="240.0" text="High Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Exclamation_mark_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="mediumPriorityButton" alignment="BASELINE_LEFT" onMouseClicked="#displayMediumPriorityTasks" prefHeight="90.0" prefWidth="240.0" text="Medium Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Minus_sign_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="lowPriorityButton" alignment="BASELINE_LEFT" onMouseClicked="#displayLowPriorityTasks" prefHeight="90.0" prefWidth="240.0" text="Low Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Check_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <Region VBox.vgrow="ALWAYS" />
            <JFXButton alignment="BASELINE_LEFT" onDragDropped="#trashDropped" onDragOver="#trashDragOver" onMouseClicked="#displayDoneTasks" prefHeight="90.0" prefWidth="240.0" text="Done Tasks">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Trash_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children></VBox>
   </left>
</BorderPane>
