<?import com.jfoenix.controls.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="650.0" prefWidth="1000.0" styleClass="background"
            stylesheets="@../css/NavigationBar.css" xmlns="http://javafx.com/javafx/15.0.1">
   <left>
      <VBox styleClass="navbar" BorderPane.alignment="CENTER">
         <children>
            <JFXButton alignment="BASELINE_LEFT" prefHeight="90.0" prefWidth="240.0" ripplerFill="WHITE"
                       text="All Tasks">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Star_icon.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton alignment="BASELINE_LEFT" prefHeight="90.0" prefWidth="240.0" text="High Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Exclamation_mark_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton alignment="BASELINE_LEFT" prefHeight="90.0" prefWidth="240.0" text="Medium Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Minus_sign_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton alignment="BASELINE_LEFT" prefHeight="90.0" prefWidth="240.0" text="Low Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Check_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <Region VBox.vgrow="ALWAYS" />
            <JFXButton alignment="BASELINE_LEFT" prefHeight="90.0" prefWidth="240.0" text="Trash">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Trash_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children></VBox>
   </left>
</BorderPane>
