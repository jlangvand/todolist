<?xml version="1.0" encoding="UTF-8"?>

<!--
This file is the view for navigation bar. Use BorderPane.setCenter() method
to change the area outside of the navigation bar (right side of view).

This view uses JFeonix.
-->

<?import com.jfoenix.controls.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="pane" minWidth="500.0" styleClass="background" stylesheets="@../css/NavigationBar.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NavBarController">
   <left>
      <VBox styleClass="navbar" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="allTasksButton" alignment="BASELINE_LEFT" onMouseClicked="#displayAllTasks"
                       prefHeight="90.0" prefWidth="240.0" ripplerFill="WHITE" text="All Tasks">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Star_icon.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="highPriorityButton" alignment="BASELINE_LEFT" onMouseClicked="#displayHighPriorityTasks"
                       prefHeight="90.0" prefWidth="240.0" text="High Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Exclamation_mark_icon.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="mediumPriorityButton" alignment="BASELINE_LEFT"
                       onMouseClicked="#displayMediumPriorityTasks" prefHeight="90.0" prefWidth="240.0"
                       text="Medium Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Minus_sign_icon.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton fx:id="lowPriorityButton" alignment="BASELINE_LEFT" onMouseClicked="#displayLowPriorityTasks"
                       prefHeight="90.0" prefWidth="240.0" text="Low Priority">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Check_icon.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <Region VBox.vgrow="ALWAYS" />
            <JFXButton fx:id="trashButton" alignment="BASELINE_LEFT" onMouseClicked="#displayTrash" prefHeight="90.0"
                       prefWidth="240.0" text="Trash">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Trash_icon.png"/>
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children></VBox>
   </left>
</BorderPane>
