<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="background" stylesheets="@../css/TaskPage.css"
            xmlns="http://javafx.com/javafx/15.0.1">
    <center>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
            <children>
                <JFXButton fx:id="addTaskButton" maxWidth="10000.0" minHeight="80.0" minWidth="220.0"
                           styleClass="normalLabel" text="Add New Task" VBox.vgrow="ALWAYS">
                    <graphic>
                        <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/add_task.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </JFXButton>
                <Region prefHeight="30.0" prefWidth="540.0"/>
                <JFXListView fx:id="allTasksList" styleClass="jfx-list-view" stylesheets="@../css/TaskPage.css"/>
            </children>
        </VBox>
    </center>
    <top>
        <HBox alignment="CENTER" prefHeight="80.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <Label styleClass="titleLabel" stylesheets="@../css/TaskPage.css" text="All Tasks"
                       textAlignment="CENTER"/>
            </children>
        </HBox>
    </top>
    <right>
        <Region maxWidth="30.0" prefWidth="30.0" BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <Region prefHeight="30.0" prefWidth="600.0" BorderPane.alignment="CENTER"/>
    </bottom>
    <left>
        <Region maxWidth="30.0" prefWidth="30.0" BorderPane.alignment="CENTER"/>
    </left>
</BorderPane>
